<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Daftar Produk</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 2rem;
      text-align: center;
    }
    h1 {
      margin-bottom: 1rem;
      color: #333;
    }
    h2 {
      margin-bottom: 1rem;
      color: #333;
    }
    a {
      display: inline-block;
      margin-bottom: 2rem;
      padding: 0.5rem 1rem;
      background-color: #4CAF50;
      color: white;
      text-decoration: none;
      border-radius: 5px;
      font-size: 1rem;
    }
    a:hover {
      background-color: #45a049;
    }
    .cards {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
    }
    .card {
      background-color: white;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 1rem;
      width: 220px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      transition: transform 0.2s;
    }
    .card:hover {
      transform: translateY(-5px);
    }
    .card img {
      max-width: 100%;
      height: 150px;
      object-fit: cover;
      border-radius: 4px;
    }
    .card h2 {
      font-size: 1.2rem;
      margin: 0.5rem 0;
      color: #555;
    }
    .card p {
      font-size: 1rem;
      color: #777;
      margin: 0;
    }
    .no-image {
      height: 150px;
      background: #eee;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 4px;
      color: #aaa;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <h1>1502022028 - Dany Prastya Al Hakim</h1>
  <h1>Ini Toko</h1>
  <h2>Daftar Produk Toko Ini</h2>
  <p><a href="/add">Tambah Produk Baru</a></p>
  <div class="cards">
    <% products.forEach(product => { %>
      <div class="card">
        <% if (product.imageUrl) { %>
          <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
        <% } else { %>
          <div class="no-image">No Image</div>
        <% } %>
        <h2><%= product.name %></h2>
        <p>Harga: Rp <%= parseFloat(product.price).toFixed(2) %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
