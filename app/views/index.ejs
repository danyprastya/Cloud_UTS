<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Daftar Produk</title>
  <style>
    .cards { display: flex; flex-wrap: wrap; gap: 1rem; }
    .card { border: 1px solid #ccc; padding: 1rem; width: 200px; text-align: center; }
    .card img { max-width: 100%; height: auto; }
  </style>
</head>
<body>
  <h1>Daftar Produk</h1>
  <p><a href="/add">Tambah Produk Baru</a></p>
  <div class="cards">
    <% products.forEach(product => { %>
      <div class="card">
        <% if (product.imageUrl) { %>
          <img src="<%= product.imageUrl %>" alt="<%= product.name %>">
        <% } else { %>
          <div style="height:150px; background:#f0f0f0; display:flex; align-items:center; justify-content:center;">
            No Image
          </div>
        <% } %>
        <h2><%= product.name %></h2>
        <p>Harga: $<%= parseFloat(product.price).toFixed(2) %></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
